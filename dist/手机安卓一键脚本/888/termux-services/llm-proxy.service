[Unit]
Description=LLM Proxy Service
After=network.target

[Service]
Type=forking
ExecStart=/data/data/com.termux/files/usr/bin/bash %h/.termux/service/llm-proxy/llm-proxy-daemon
ExecStop=/data/data/com.termux/files/usr/bin/bash -c 'pkill -f "python.*app.py cli"'
Restart=always
RestartSec=10
User=%i

[Install]
WantedBy=default.target